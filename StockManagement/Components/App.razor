<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="StockManagement.styles.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css?v=@(MudBlazor.Metadata.Version)" rel="stylesheet" />

    <HeadOutlet @rendermode="GetRenderMode()" />
</head>

<body>
    <Routes @rendermode="GetRenderMode()" />
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js?v=@(MudBlazor.Metadata.Version)"></script>
    <script src="_content/Extensions.MudBlazor.StaticInput/NavigationObserver.js"></script>

</body>

</html>

@code {
    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    private IComponentRenderMode? GetRenderMode()
    {
        // Les pages Identity restent en Static SSR (null)
        if (HttpContext.Request.Path.StartsWithSegments("/Account"))
        {
            return null;
        }

        // Toutes les autres pages sont interactives
        return new InteractiveServerRenderMode(prerender: false);
    }
}